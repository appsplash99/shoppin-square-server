{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["prettier", "airbnb-base"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": ["never"],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": false
      }
    ],
    "linebreak-style": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["req.user._id", "_id"]
      }
    ],
    "eol-last": ["never"],
  }
}